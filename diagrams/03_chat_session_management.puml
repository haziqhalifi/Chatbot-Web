@startuml Chat Session Management
!theme plain
title Chat Session Management Activity Diagram

start

:User logs in successfully;

:Navigate to chat interface;

if (Existing chat sessions?) then (yes)
    :Display session list;
    :User selects session or creates new;
    if (Create new session?) then (yes)
        :Call /chat/sessions POST;
        :Create new session in database;
        :Generate welcome message from Tiara;
        :Return session details;
    else (no)
        :Load selected session;
        :Call /chat/sessions/{id};
        :Fetch session details;
        :Load chat history;
    endif
else (no)
    :Call /chat/sessions POST;
    :Create new session in database;
    :Generate welcome message from Tiara;
    :Return session details;
endif

:Display chat interface;

:Show chat history;

:User ready to chat;

stop
@enduml
