@startuml Admin Dashboard Flow
!theme plain
title Admin Dashboard Activity Diagram

start

:Admin logs in successfully;

:Navigate to admin dashboard;

:Load admin dashboard data;

split
    :View user statistics;
    :Call /admin/users endpoint;
    :Display user metrics;
split again
    :View system reports;
    :Call /admin/reports endpoint;
    :Display system metrics;
split again
    :Manage users;
    :Call /admin/users/{id} endpoint;
    :Display user details;
    if (Admin action?) then (suspend)
        :Suspend user account;
        :Update user status;
        :Create notification;
    else (activate)
        :Activate user account;
        :Update user status;
        :Create notification;
    else (delete)
        :Delete user account;
        :Clean up user data;
        :Create audit log;
    endif
split again
    :Review chat logs;
    :Call /admin/chats endpoint;
    :Display chat sessions;
    :Filter by criteria;
end split

:Update admin dashboard;

:Show updated information;

stop
@enduml
