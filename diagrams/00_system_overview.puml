@startuml System Overview
!theme plain
title Chatbot Web System Overview Activity Diagram

start

:User accesses application;

split
    :Frontend (React + Vite);
    :Load application;
    :Initialize routing;
    :Setup authentication context;
split again
    :Backend (FastAPI);
    :Initialize database;
    :Setup RAG system;
    :Load AI models;
    :Configure middleware;
end split

:System ready;

:User performs action;

if (Action type?) then (Authentication)
    :Process auth request;
    :Validate credentials;
    :Generate/verify JWT;
    :Return auth response;
else (Chat)
    :Validate user session;
    :Process chat message;
    :Generate AI response;
    :Save to database;
    :Return response;
else (Admin)
    :Verify admin privileges;
    :Process admin request;
    :Update system data;
    :Return admin response;
else (Profile)
    :Validate user identity;
    :Update profile data;
    :Save changes;
    :Return success;
else (Subscription)
    :Process payment;
    :Update subscription;
    :Adjust user credits;
    :Return subscription status;
endif

:Update frontend state;

:Display results to user;

:User continues interaction;

stop
@enduml
